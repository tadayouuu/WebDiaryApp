@model IEnumerable<WebDiaryApp.Models.DiaryEntry>

<h1 class="mb-3">日記一覧</h1>

<a class="btn btn-success mb-3" asp-action="Create">新規作成</a>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>日付</th>
                <th>タイトル</th>
                <th>タグ</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date?.ToString("yyyy-MM-dd")</td>
                    <td>@item.Title</td>
                    <td>@item.Tag</td>
                    <td>
                        <a class="btn btn-sm btn-info me-1" asp-action="Details" asp-route-id="@item.Id">表示</a>
                        <a class="btn btn-sm btn-primary me-1" asp-action="Edit" asp-route-id="@item.Id">編集</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">削除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
