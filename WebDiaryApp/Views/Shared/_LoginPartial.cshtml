@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<nav class="top-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <span class="user-greeting">Hello @User.Identity.Name!</span>
        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="inline-form" style="display:inline;">
            <button type="submit" class="btn btn-outline-primary btn-sm">Logout</button>
        </form>
    }
    else
    {
        <a class="btn btn-outline-primary btn-sm" asp-area="Identity" asp-page="/Account/Login">Login</a>
        <a class="btn btn-outline-secondary btn-sm" asp-area="Identity" asp-page="/Account/Register">Register</a>
    }
</nav>
