@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="login-section d-flex align-items-center gap-3">
        <span class="text-muted small">@UserManager.GetUserName(User)</span>
        <form class="inline-form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Diary")" method="post">
            <button type="submit" class="btn btn-light notion-btn">Logout</button>
        </form>
    </div>
}
else
{
    <div class="login-section d-flex align-items-center gap-2">
        <a class="btn btn-light notion-btn" asp-area="Identity" asp-page="/Account/Login">Login</a>
        <a class="btn btn-outline-secondary notion-btn" asp-area="Identity" asp-page="/Account/Register">Sign up</a>
    </div>
}

