@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="nav-login-container">
    @if (SignInManager.IsSignedIn(User))
    {
        <span class="nav-greeting">@User.Identity.Name ログイン中</span>
        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="nav-logout-form">
            <button type="submit" class="nav-btn">Logout</button>
        </form>
    }
    else
    {
        <a class="nav-btn" asp-area="Identity" asp-page="/Account/Login">Login</a>
        <a class="nav-btn secondary" asp-area="Identity" asp-page="/Account/Register">Register</a>
    }
</div>
