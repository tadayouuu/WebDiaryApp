<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebDiaryApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebDiaryApp.styles.css" asp-append-version="true" />

    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
</head>
<body>
    <div class="notion-wrapper">
        <!-- === ヘッダー === -->
        <header class="notion-header">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center py-3">
                    <div class="fw-semibold fs-5">
                        📔 <a asp-controller="Diary" asp-action="Index" class="text-decoration-none text-dark">WebDiary</a>
                    </div>
                    <div class="d-flex align-items-center gap-3">
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </div>
        </header>

        <!-- === メインコンテンツ === -->
        <main class="notion-main container py-4">
            @RenderBody()
        </main>

        <!-- === フッター === -->
        <footer class="text-center py-3 text-muted small">
            © 2025 WebDiaryApp
        </footer>
    </div>

    <!-- JSライブラリ群 -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
