@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "メールアドレスの確認";
}

<div class="identity-card text-center">
    <h2 class="fw-bold mb-3">@ViewData["Title"]</h2>
    <p class="text-muted mb-4">
        メールアドレスの確認が完了したで。<br />
        下のボタンからログインしてくれんさい。
    </p>
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <a asp-page="./Login" class="btn btn-dark rounded-pill w-100 py-2 mt-3">ログインページへ</a>
</div>
