@page
@model LoginModel
@{
    ViewData["Title"] = "ログイン";
}

<div class="identity-card">
    <h2 class="fw-bold mb-3 text-center">@ViewData["Title"]</h2>
    <p class="text-muted text-center mb-4">アカウント情報を入力してログインしんちゃい。</p>

    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">メールアドレス</label>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Password" class="form-label">パスワード</label>
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            <label asp-for="Input.RememberMe" class="form-check-label">
                ログイン状態を維持する
            </label>
        </div>

        <button id="login-submit" type="submit" class="btn btn-dark w-100 rounded-pill py-2 mb-3">ログイン</button>

        <div class="text-center">
            <p class="mb-1">
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">パスワードを忘れたんかいね？</a>
            </p>
            <p class="mb-1">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">新規ユーザー登録</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">確認メールを再送信</a>
            </p>
        </div>
    </form>

    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
    {
        <hr class="my-4" />
        <h3 class="text-center mb-3">外部サービスでログイン</h3>
        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
            @foreach (var provider in Model.ExternalLogins!)
            {
                <button type="submit" class="btn btn-outline-dark rounded-pill me-2 mb-2"
                        name="provider" value="@provider.Name"
                        title="@provider.DisplayName でログイン">
                    @provider.DisplayName
                </button>
            }
        </form>
    }
    else
    {
        <p class="text-muted text-center mt-3">外部認証サービスは設定されとらんけぇね。</p>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}