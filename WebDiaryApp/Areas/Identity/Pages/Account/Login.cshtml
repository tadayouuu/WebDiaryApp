@page
@model LoginModel

@{
    ViewData["Title"] = "ログイン";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>アカウントでログイン</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="メールアドレス" />
                    <label asp-for="Input.Email" class="form-label">メールアドレス</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="パスワード" />
                    <label asp-for="Input.Password" class="form-label">パスワード</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        ログイン状態を維持する
                    </label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">ログイン</button>
                </div>

                <div class="mt-3">
                    <p><a id="forgot-password" asp-page="./ForgotPassword">パスワードを忘れたんかね？</a></p>
                    <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">新規ユーザー登録</a></p>
                    <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">確認メールを再送信</a></p>
                </div>
            </form>
        </section>
    </div>

    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>外部サービスでログイン</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p>外部認証サービスは設定されとらんけぇね。</p>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <p>
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-primary me-2"
                                        name="provider" value="@provider.Name"
                                        title="@provider.DisplayName でログイン">
                                    @provider.DisplayName
                                </button>
                            }
                        </p>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
