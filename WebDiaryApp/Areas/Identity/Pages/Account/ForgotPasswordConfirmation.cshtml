@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "パスワードリセットメールを送ったで";
}

<div class="identity-card text-center">
    <h2 class="fw-bold mb-3">@ViewData["Title"]</h2>
    <p class="text-muted mb-4">
        登録されたメールアドレス宛に<br />
        パスワード再設定用のリンクを送ったけぇ、<br />
        メールを確認しんちゃい。
    </p>
    <a asp-page="./Login" class="btn btn-dark rounded-pill w-100 py-2">ログインページへ戻る</a>
</div>
