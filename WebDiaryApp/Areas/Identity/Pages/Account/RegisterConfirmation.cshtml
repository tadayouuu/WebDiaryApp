@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "登録完了";
}

<div class="identity-card">
    <h2 class="fw-bold mb-3 text-center">@ViewData["Title"]</h2>

    @if (Model.DisplayConfirmAccountLink)
    {
        <p class="text-muted text-center mb-4">
            登録ありがとうさん！<br />
            メールの確認がまだじゃけぇ、下のボタンから確認ページへ進んでつかぁさい。
        </p>
        <div class="text-center">
            <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-dark rounded-pill px-4 py-2">
                メール確認ページへ
            </a>
        </div>
    }
    else
    {
        <p class="text-muted text-center mb-4">
            登録ありがとうさん！<br />
            確認メールを送っとるけぇ、メールをチェックしてつかぁさい。<br />
            メールが見当たらん場合は、迷惑メールフォルダも確認してみての。
        </p>
    }

    <div class="text-center mt-4">
        <a asp-page="./Login" class="text-decoration-none">ログインページへ戻る</a>
    </div>
</div>
